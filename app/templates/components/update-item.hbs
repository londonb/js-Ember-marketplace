{{#if updateItemForm}}
<h1>Update Item</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=item.name}}
        </div>

        <div class="form-group">
          <label for="image">image</label>
          {{input value=item.image}}
        </div>

        <div class="form-group">
          <label for="cost">cost</label>
          {{input type=number value=item.cost}}
        </div>

        <div class="form-group">
          <label for="description">description</label>
          {{#bs-textarea value=item.description}}{{/bs-textarea}}
        </div>

        <button {{action 'update' item}}>Update</button>
      </form>
    </div>
{{else}}
<button class="btn btn-sm btn-success"{{action 'updateFormShow'}}>Update Item</button>
{{/if}}
